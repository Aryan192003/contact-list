<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/4d544a2c7e.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        
        <h1 id="heading">
            <i class="fa-solid fa-address-book"></i>
            My contact list</h1>

        <div class="list-container">
            <ul>
                <% for (let i of contact_list){%>
                    <li >
                        <div >
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                        </div>
                        <div class="delete">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div>
                    </li> 
                    <%}%> 
            </ul>
        </div>

        <form id="form" action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number" name="phone" placeholder="Enter phone" required>
            <button type="submit">Add contact</button>
        </form>
        
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>